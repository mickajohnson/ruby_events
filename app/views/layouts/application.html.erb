<!DOCTYPE html>
<html>
<head>
  <title>BeltReviewer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
  <% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |e| %>
     <li><%= e %></li>
    <% end %>
  </ul>
  <% end %>
  <% if current_user %>
    <a href="/logout">Logout</a>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
