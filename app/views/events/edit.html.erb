<a href="/">Events Dashboard</a>
<h1>Edit <%=@event.name%></h1>
<form action="/events/<%=@event.id%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label for="event[name]">Name</label>
    <input class="form-control" type="text" name="event[name]" value="<%=@event.name%>">
  </div>
  <div class="form-group">
    <label for="event[date]">Date</label>
    <input class="form-control" type="date" name="event[date]" value="<%=@event.date%>">
  </div>
  <div class="form-group">
    <label for="event[city]">City</label>
    <input class="form-control" type="text" name="event[city]" value="<%=@event.city%>">
  </div>
  <div class="form-group">
    <label for="event[state]">State</label>
    <select class="form-control" name="event[state]">
      <%@states.each do |state|%>
        <option value="<%=state%>" <%if state == @event.state%>selected="selected"<%end%>><%=state%></option>
      <%end%>
    </select>
  </div>
  <input type="submit" class="btn btn-info" value="Add Event">
</form>
